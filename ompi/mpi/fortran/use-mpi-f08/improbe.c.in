PROTOTYPE VOID improbe(RANK source, TAG tag, COMM comm,
                       LOGICAL_OUT flag, MESSAGE_OUT message,
                       STATUS_OUT status)
{
    MPI_Message c_message;
    MPI_Comm c_comm;
    OMPI_FORTRAN_STATUS_DECLARATION(c_status,c_status2)
    int c_ierr;
    int c_flag = 0;

    c_comm = PMPI_Comm_f2c (*comm);

    OMPI_FORTRAN_STATUS_SET_POINTER(c_status,c_status2,status)

    c_ierr = @INNER_CALL@(OMPI_FINT_2_INT(*source),
                          OMPI_FINT_2_INT(*tag),
                          c_comm, &c_flag,
                          &c_message, c_status);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *flag = OMPI_INT_2_FINT(c_flag);
        if (1 == c_flag) {
            OMPI_FORTRAN_STATUS_RETURN(c_status,c_status2,status,c_ierr)
            *message = PMPI_Message_c2f(c_message);
        }
    }
}
