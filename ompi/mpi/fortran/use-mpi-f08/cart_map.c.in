PROTOTYPE VOID cart_map(COMM comm, INT ndims, INT_ARRAY dims:ndims,
                        LOGICAL_ARRAY periods:ndims, INT_OUT newrank)
{
    MPI_Comm c_comm;
    int c_ierr, c_ndims;
    int *tmp_dims = NULL;
    @LOGICAL_TYPE@ *tmp_periods = NULL;
    int c_newrank;

    c_comm = PMPI_Comm_f2c(*comm);

    c_ndims = OMPI_FINT_2_INT(*ndims);

    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(dims, tmp_dims, c_ndims);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(periods, tmp_periods, c_ndims);

    c_ierr = @INNER_CALL@(c_comm,
                          c_ndims,
                          tmp_dims,
                          tmp_periods,
                          &c_newrank);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *newrank = OMPI_INT_2_FINT(c_newrank);
    }

    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(dims, tmp_dims);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(periods, tmp_periods);
}
