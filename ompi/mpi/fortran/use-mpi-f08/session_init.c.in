PROTOTYPE VOID session_init(INFO info, ERRHANDLER errhandler, SESSION_OUT session)
{
    int c_ierr;
    MPI_Session c_session;
    MPI_Info c_info;
    MPI_Errhandler c_errhandler;

    c_info = PMPI_Info_f2c(*info);
    c_errhandler = PMPI_Errhandler_f2c(*errhandler);

    c_ierr = @INNER_CALL@(c_info, c_errhandler, &c_session);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *session = PMPI_Session_c2f(c_session);
    }
}
