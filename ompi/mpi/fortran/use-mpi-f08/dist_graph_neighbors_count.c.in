PROTOTYPE VOID dist_graph_neighbors_count(COMM comm, INT_OUT inneighbors,
                                          INT_OUT outneighbors, LOGICAL_OUT weighted)
{
    MPI_Comm c_comm;
    int c_inneighbors;
    int c_outneighbors;
    int c_weighted;
    int c_ierr;

    c_comm = PMPI_Comm_f2c(*comm);

    c_ierr = @INNER_CALL@(c_comm,
                          &c_inneighbors,
                          &c_outneighbors,
                          &c_weighted);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
    if (OMPI_SUCCESS == c_ierr) {
          *inneighbors = OMPI_INT_2_FINT(c_inneighbors);
          *outneighbors = OMPI_INT_2_FINT(c_outneighbors);
          *weighted = OMPI_INT_2_FINT(c_weighted);
    }
}

