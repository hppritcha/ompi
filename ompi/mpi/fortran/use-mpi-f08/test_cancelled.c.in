PROTOTYPE VOID test_cancelled(STATUS status, LOGICAL flag)
{
    int c_ierr;
    MPI_Status c_status;
    int c_flag = 0;

    /* This seems silly, but someone will do it */

    if (OMPI_IS_FORTRAN_STATUS_IGNORE(status)) {
        *flag = OMPI_INT_2_FINT(0);
        c_ierr = MPI_SUCCESS;
    } else {
        c_ierr = PMPI_Status_f2c( status, &c_status );

        if (MPI_SUCCESS == c_ierr) {
            c_ierr = @INNER_CALL@(&c_status,
                                  &c_flag);
        }
    }

    if (MPI_SUCCESS == c_ierr) {
        *flag = OMPI_INT_2_FINT(c_flag);
    }

    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
}
