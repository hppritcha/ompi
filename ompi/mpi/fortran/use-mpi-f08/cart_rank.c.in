PROTOTYPE VOID cart_rank(COMM comm, INT_ARRAY coords, INT_OUT rank)
{
    MPI_Comm c_comm;
    int ndims, c_ierr, c_rank;
    int *tmp_coords = NULL;

    c_comm = PMPI_Comm_f2c(*comm);

    c_ierr = PMPI_Cartdim_get(c_comm, &ndims);
    if (MPI_SUCCESS != c_ierr) {
        if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
        return;
    }

    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(coords, tmp_coords, ndims);

    c_ierr = @INNER_CALL@(c_comm,
                          tmp_coords,
                          &c_rank);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *rank = OMPI_INT_2_FINT(c_rank);
    }

    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(coords, tmp_coords);
}
