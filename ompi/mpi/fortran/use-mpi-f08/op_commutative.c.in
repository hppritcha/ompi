PROTOTYPE VOID op_commutative(OP op, LOGICAL_OUT commute)
{
    int c_ierr;
    MPI_Op c_op;
    int c_commute;

    c_op = PMPI_Op_f2c(*op);

    c_ierr = @INNER_CALL@(c_op, &c_commute);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *commute = OMPI_INT_2_FINT(c_commute);
    }
}
