PROTOTYPE VOID cart_get(COMM comm, INT maxdims, INT_ARRAY_OUT dims:maxdims,
		        LOGICAL_ARRAY_OUT periods:maxdims, 
                        INT_ARRAY_OUT coords:maxdims)
{
    MPI_Comm c_comm;
    int c_maxdims, c_ierr;
    int *tmp_dims = NULL;
    int *tmp_coords = NULL;
    @LOGICAL_TYPE@ *tmp_periods = NULL;

    c_comm = PMPI_Comm_f2c(*comm);

    c_maxdims = OMPI_FINT_2_INT(*maxdims);

    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(dims, tmp_dims, c_maxdims);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(periods, tmp_periods, c_maxdims);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(coords, tmp_coords, c_maxdims);

    c_ierr = @INNER_CALL@(c_comm,
                          c_maxdims,
                          tmp_dims,
                          tmp_periods,
                          tmp_coords);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        OMPI_FORTRAN_BIGCOUNT_ARRAY_COPYOUT(coords, tmp_coords, c_maxdims);
        OMPI_FORTRAN_BIGCOUNT_ARRAY_COPYOUT(periods, tmp_periods, c_maxdims);
        OMPI_FORTRAN_BIGCOUNT_ARRAY_COPYOUT(dims, tmp_dims, c_maxdims);
    }

    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(coords, tmp_coords);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(periods, tmp_periods);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(dims, tmp_dims);
    
}
