PROTOTYPE VOID comm_idup_with_info(COMM comm, INFO info, COMM_OUT newcomm, REQUEST_OUT request)
{
    int c_ierr;
    MPI_Comm c_newcomm;
    MPI_Comm c_comm = PMPI_Comm_f2c(*comm);
    MPI_Info c_info;
    MPI_Request c_req;

    c_info = PMPI_Info_f2c(*info);

    c_ierr = @INNER_CALL@(c_comm, c_info, &c_newcomm, &c_req);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *newcomm = PMPI_Comm_c2f(c_newcomm);
        *request = PMPI_Request_c2f(c_req);
    }
}
