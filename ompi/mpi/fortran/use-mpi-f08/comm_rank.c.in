PROTOTYPE VOID comm_rank(COMM comm, RANK_OUT rank)
{
    int c_ierr;
    MPI_Comm c_comm = PMPI_Comm_f2c( *comm );
    int c_rank;

    c_ierr = @INNER_CALL@( c_comm, &c_rank);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *rank = OMPI_INT_2_FINT(c_rank);
    }
}
