PROTOTYPE VOID get_library_version(CHAR_ARRAY_OUT version:MPI_MAX_LIBRARY_VERSION_STRING, 
                                   INT_OUT resultlen)
{
    int c_ierr, c_resultlen;

    c_ierr = @INNER_CALL@(version, &c_resultlen);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *resultlen = OMPI_INT_2_FINT(c_resultlen);
    }
}
