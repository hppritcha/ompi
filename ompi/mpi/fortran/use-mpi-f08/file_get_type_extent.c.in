PROTOTYPE VOID file_get_type_extent(FILE fh, DATATYPE datatype,
				    AINT_OUT extent)
{
    int c_ierr;
    MPI_File c_fh = PMPI_File_f2c(*fh);
    MPI_Datatype c_type;

    c_type = PMPI_Type_f2c(*datatype);

    c_ierr = @INNER_CALL@(c_fh, c_type, extent);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
}
