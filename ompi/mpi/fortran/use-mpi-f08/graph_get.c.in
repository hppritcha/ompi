PROTOTYPE VOID graph_get(COMM comm, INT maxindex,
		         INT maxedges, INT_ARRAY_OUT index:maxindex,
		         INT_ARRAY_OUT edges:maxedges)
{
    int c_ierr;
    MPI_Comm c_comm;
    int c_maxindex;
    int c_maxedges;
    int *tmp_index = NULL;
    int *tmp_edges = NULL;

    c_comm = PMPI_Comm_f2c(*comm);

    c_maxindex = OMPI_FINT_2_INT(*maxindex);
    c_maxedges = OMPI_FINT_2_INT(*maxedges);

    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(index, tmp_index, c_maxindex);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(edges, tmp_edges, c_maxedges);

    c_ierr = @INNER_CALL@(c_comm,
                          c_maxindex,
                          c_maxedges,
                          tmp_index,
                          tmp_edges);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        OMPI_FORTRAN_BIGCOUNT_ARRAY_COPYOUT(index, tmp_index, c_maxindex);
        OMPI_FORTRAN_BIGCOUNT_ARRAY_COPYOUT(edges, tmp_edges, c_maxedges);
    }
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(index, tmp_index);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(edges, tmp_edges);
}
