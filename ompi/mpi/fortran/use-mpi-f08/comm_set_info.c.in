PROTOTYPE VOID comm_set_info(COMM comm, INFO info)
{
    int c_ierr;
    MPI_Comm c_comm = PMPI_Comm_f2c(*comm);
    MPI_Info c_info = PMPI_Info_f2c(*info);

    c_ierr = PMPI_Comm_set_info(c_comm, c_info);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
}
