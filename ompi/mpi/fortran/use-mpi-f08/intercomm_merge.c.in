PROTOTYPE VOID intercomm_merge(COMM intercomm, LOGICAL high,
                               COMM_OUT newintracomm)
{
    int c_ierr;
    MPI_Comm c_newcomm;
    MPI_Comm c_intercomm = PMPI_Comm_f2c(*intercomm);
    int c_high;

    c_high = OMPI_FINT_2_INT(*high);

    c_ierr = @INNER_CALL@(c_intercomm, 
                          c_high,
                          &c_newcomm);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *newintracomm = PMPI_Comm_c2f (c_newcomm);
    }
}
