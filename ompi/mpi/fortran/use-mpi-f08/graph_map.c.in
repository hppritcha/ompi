PROTOTYPE VOID graph_map(COMM comm, INT nnodes, INT_ARRAY index:nnodes,
		         INT_ARRAY edges, INT_OUT newrank)
{
    int c_ierr;
    MPI_Comm c_comm;
    int *tmp_index = NULL;
    int *tmp_edges = NULL;
    int c_newrank, c_nnodes;

    c_comm = PMPI_Comm_f2c(*comm);

    c_nnodes = OMPI_FINT_2_INT(*nnodes);

    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(index, tmp_index, c_nnodes);

    /* Number of edges is equal to the last entry in the index array */
    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(edges, tmp_edges, index[c_nnodes-1]);

    c_ierr = @INNER_CALL@(c_comm, c_nnodes,
                          tmp_index,
                          tmp_edges,
                          &c_newrank);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *newrank = OMPI_INT_2_FINT(c_newrank);
    }
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(index, tmp_index);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(edges, tmp_edges);
}
