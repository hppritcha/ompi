PROTOTYPE VOID error_class(INT errorcode, INT_OUT errorclass)
{
    int c_ierr;
    int c_errorclass;

    c_ierr = @INNER_CALL@(OMPI_FINT_2_INT(*errorcode),
                          &c_errorclass);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *errorclass = OMPI_INT_2_FINT(c_errorclass);
    }
}
