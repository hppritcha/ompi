PROTOTYPE VOID file_get_size(FILE fh, OFFSET_OUT size)
{
    int c_ierr;
    MPI_File c_fh = PMPI_File_f2c(*fh);
    MPI_Offset c_size;

    c_ierr = @INNER_CALL@(c_fh, &c_size);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *size = (MPI_Offset) c_size;
    }
}
