PROTOTYPE VOID comm_compare(COMM comm1, COMM comm2, INT_OUT result)
{
    int c_ierr;
    MPI_Comm c_comm1 = PMPI_Comm_f2c(*comm1);
    MPI_Comm c_comm2 = PMPI_Comm_f2c(*comm2);
    int c_result;

    c_ierr = @INNER_CALL@(c_comm1, c_comm2, &c_result);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *result = OMPI_INT_2_FINT(c_result);
    }
}
