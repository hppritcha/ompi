PROTOTYPE VOID comm_create_from_group(GROUP group, CHAR_ARRAY stringtag, INFO info, ERRHANDLER errhandler, 
                                      COMM_OUT newcomm)
{
    int c_ierr;
    MPI_Group c_group;
    MPI_Comm c_comm;
    MPI_Info c_info;
    MPI_Errhandler c_err;

    c_group = PMPI_Group_f2c(*group);
    c_info = PMPI_Info_f2c(*info);
    c_err = PMPI_Errhandler_f2c(*errhandler);

    c_ierr = @INNER_CALL@(c_group, stringtag, c_info, c_err, &c_comm);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *newcomm = PMPI_Comm_c2f (c_comm);
    }
}

