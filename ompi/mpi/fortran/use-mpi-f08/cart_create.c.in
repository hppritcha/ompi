PROTOTYPE VOID cart_create(COMM old_comm, INT ndims, INT_ARRAY dims:ndims,
                           LOGICAL_ARRAY periods:ndims, LOGICAL reorder,
                           COMM_OUT comm_cart)
{
    MPI_Comm c_comm1, c_comm2;
    int size, c_ierr;
    int *tmp_dims = NULL;
    @LOGICAL_TYPE@ *tmp_periods = NULL;
    int c_reorder = (@LOGICAL_TYPE@)*reorder;

    c_comm1 = PMPI_Comm_f2c(*old_comm);

    size = OMPI_FINT_2_INT(*ndims);

    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(periods, tmp_periods, size);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(dims, tmp_dims, size);

    OMPI_ARRAY_LOGICAL_2_INT(periods, size);

    c_ierr = @INNER_CALL@(c_comm1, 
                          size,
                          tmp_dims,
                          tmp_periods,
                          c_reorder,
                          &c_comm2);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *comm_cart = PMPI_Comm_c2f(c_comm2);
    }

    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(periods, tmp_periods);
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(dims, tmp_dims);
}

