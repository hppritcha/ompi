PROTOTYPE VOID file_get_view(FILE fh, OFFSET_OUT disp,
			     DATATYPE_OUT etype, 
                             DATATYPE_OUT filetype,
			     CHAR_ARRAY_OUT datarep)
{
    int c_ierr;
    MPI_File c_fh = PMPI_File_f2c(*fh);
    MPI_Datatype c_etype, c_filetype;
    MPI_Offset c_disp;

    c_ierr = @INNER_CALL@(c_fh, &c_disp, &c_etype,
                           &c_filetype, datarep);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *disp = (MPI_Offset) c_disp;
        *etype = PMPI_Type_c2f(c_etype);
        *filetype = PMPI_Type_c2f(c_filetype);
    }
}
