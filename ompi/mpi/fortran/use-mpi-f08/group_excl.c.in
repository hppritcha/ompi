PROTOTYPE VOID group_excl(GROUP group, INT n,
		          INT_ARRAY ranks:n, GROUP_OUT newgroup)
{
    int c_ierr;
    ompi_group_t *c_group, *c_newgroup;
    int *tmp_ranks = NULL;

    /* Make the fortran to c representation conversion */
    c_group = PMPI_Group_f2c(*group);

    OMPI_FORTRAN_BIGCOUNT_ARRAY_SET(ranks, tmp_ranks, *n);
    c_ierr = @INNER_CALL@(c_group,
                          OMPI_FINT_2_INT(*n),
                          tmp_ranks,
                          &c_newgroup);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    /* translate the results from c to fortran */
    if (MPI_SUCCESS == c_ierr) {
        *newgroup = c_newgroup->grp_f_to_c_index;
    }
    OMPI_FORTRAN_BIGCOUNT_ARRAY_CLEANUP(ranks, tmp_ranks);
}
