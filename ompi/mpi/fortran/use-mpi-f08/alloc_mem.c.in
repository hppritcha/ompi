PROTOTYPE VOID alloc_mem(AINT size, INFO info, C_PTR_OUT baseptr)
{
    int ierr_c;
    MPI_Info c_info = PMPI_Info_f2c(*info);

    ierr_c = @INNER_CALL@(*size, c_info, baseptr);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(ierr_c);
}
