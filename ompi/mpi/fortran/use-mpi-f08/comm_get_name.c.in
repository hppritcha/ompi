PROTOTYPE VOID comm_get_name(COMM comm, CHAR_ARRAY_OUT comm_name:MPI_MAX_OBJECT_NAME,
                             INT_OUT resultlen)
{
    int c_ierr, c_len;
    MPI_Comm c_comm = PMPI_Comm_f2c(*comm);

    c_ierr = @INNER_CALL@(c_comm, comm_name, &c_len);
    if (MPI_SUCCESS == c_ierr) {
        *resultlen = OMPI_INT_2_FINT(c_len);
    }

    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(MPI_SUCCESS);
}
