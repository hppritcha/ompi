PROTOTYPE VOID info_set(INFO info, CHAR_ARRAY key, CHAR_ARRAY value)
{
    int c_ierr;
    MPI_Info c_info;

    c_info = PMPI_Info_f2c(*info);

    c_ierr = @INNER_CALL@(c_info, key, value);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
}
