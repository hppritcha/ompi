PROTOTYPE VOID op_free(OP_INOUT op)
{
    int c_ierr;
    MPI_Op c_op;

    c_op = PMPI_Op_f2c(*op);

    c_ierr = @INNER_CALL@(&c_op);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *op = PMPI_Op_c2f(c_op);
    }
}
