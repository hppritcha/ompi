PROTOTYPE VOID file_set_view(FILE fh, OFFSET disp,
			     DATATYPE etype, DATATYPE filetype,
                             CHAR_ARRAY datarep, INFO info)
{
   MPI_File c_fh = PMPI_File_f2c(*fh);
   MPI_Datatype c_etype = PMPI_Type_f2c(*etype);
   MPI_Datatype c_filetype = PMPI_Type_f2c(*filetype);
   MPI_Info c_info = PMPI_Info_f2c(*info);
   int c_ierr;

   c_ierr = @INNER_CALL@(c_fh, 
                         (MPI_Offset) *disp,
                         c_etype, 
                         c_filetype,
                         datarep, 
                         c_info);
   if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
}
