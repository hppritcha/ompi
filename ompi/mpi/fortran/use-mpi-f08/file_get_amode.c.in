PROTOTYPE VOID file_get_amode(FILE fh, INT_OUT amode)
{
    int c_ierr;
    MPI_File c_fh;
    int c_amode;

    c_fh = PMPI_File_f2c(*fh);
    c_ierr = @INNER_CALL@(c_fh, &c_amode);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *amode = OMPI_FINT_2_INT(c_amode);
    }
}
