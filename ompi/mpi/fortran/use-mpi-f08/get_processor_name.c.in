PROTOTYPE VOID get_processor_name(CHAR_ARRAY_OUT name:MPI_MAX_PROCESSOR_NAME, 
                                  INT_OUT resultlen)
{
    int c_ierr;
    int c_resultlen;

    c_ierr = @INNER_CALL@(name, &c_resultlen);

    if (MPI_SUCCESS == c_ierr) {
        *resultlen = OMPI_INT_2_FINT(c_resultlen);
    }

    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
}
