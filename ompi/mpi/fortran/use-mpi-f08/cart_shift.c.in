PROTOTYPE VOID cart_shift(COMM comm, INT direction, INT disp,
		      INT_OUT rank_source, INT_OUT rank_dest)
{
    int c_ierr;
    MPI_Comm c_comm;
    int c_rank_source;
    int c_rank_dest;
    int c_direction;
    int c_disp;

    c_comm = PMPI_Comm_f2c(*comm);
    c_direction = OMPI_FINT_2_INT(*direction);
    c_disp = OMPI_FINT_2_INT(*disp);

    c_ierr = @INNER_CALL@(c_comm,
                          c_direction,
                          c_disp,
                          &c_rank_source,
                          &c_rank_dest);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);

    if (MPI_SUCCESS == c_ierr) {
        *rank_source = OMPI_INT_2_FINT(c_rank_source);
        *rank_dest = OMPI_INT_2_FINT(c_rank_dest);
    }
}
